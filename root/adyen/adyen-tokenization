          - condition: $response.body.additionalData.recurring.shopperReference == $inputs.shopperReference
        outputs:
          token: $response.body.additionalData.recurring.recurringDetailReference
      - stepId: pay-with-network-token
        description: Makes the payment using the network token
        operationId: post-payments
        parameters:
          - name: x-api-key
            in: header
            value: $inputs.x-api-key
          - name: merchantAccount
            in: body
            target: $request.body#/merchantAccount
            value: $inputs.merchantAccount
          - name: amount
            in: body
            target: $request.body#/amount.value
            value: $inputs.amount.value
          - name: currency
            in: body
            target: $request.body#/amount.currency
            value: $inputs.amount.currency
          - name: reference
            in: body
            target: $request.body#/reference
            value: $inputs.reference
          - name: type
            in: body
            target: $request.body#/paymentMethod.type
            value: scheme
          - name: storedPaymentMethodId
            in: body
            target: $request.body#/paymentMethod.storedPaymentMethodId
            value: $steps.create-network-token.outputs.token
          - name: recurringProcessingModel
            in: body
            target: $request.body#/recurringProcessingModel
            value: Subscription
          - name: shopperReference
            in: body
            target: $request.body#/shopperReference
            value: $inputs.shopperReference
          - name: shopperInteraction
            in: body
            target: $request.body#/shopperInteraction
            value: ContAuth
        successCriteria:
          - condition: $statusCode == 200
        outputs:
          pspReference: $response.body.pspReference
    outputs:
      pspReference: $steps.pay-with-network-token.outputs.pspReference
components:
  inputs:
    amount:
      type: object
      properties:
        value:
          format: int64
          type: integer
          default: 2000
        currency:
          type: string
          default: EUR
    card:
      type: object
      properties:
        number:
          description: The card number (without any separators)
          maxLength: 19
          minLength: 4
          type: string
        cvc:
          format: int64
          type: integer
          maxLength: 20
          minLength: 1
        expiryMonth:
          maxLength: 2
          minLength: 1
          type: string
        expiryYear:
          maxLength: 4
          minLength: 4
          type: string
        holderName:
          maxLength: 50
          minLength: 1
          type: string
        brand:
          type: string
          enum: [visa, mc, amex]
